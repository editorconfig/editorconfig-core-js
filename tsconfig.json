{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es6"],
    "sourceMap": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": [
    "src/**/*.ts"
  ]
}
